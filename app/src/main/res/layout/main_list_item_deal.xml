<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height">

    <ImageView
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:id="@+id/dealThumb"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_photo_library_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price"
        android:id="@+id/priceText"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/dealThumb"
        android:layout_toEndOf="@+id/dealThumb"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product"
        android:id="@+id/productText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/priceText"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/ratingText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Store"
        android:id="@+id/storeText"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/priceText"
        android:layout_alignEnd="@+id/productText"
        android:layout_toEndOf="@+id/priceText" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="@dimen/list_item_height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/ratingText"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/bookmarkImg"
        android:src="@android:drawable/ic_menu_save"
        android:tint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#b71c1c" />

</RelativeLayout>